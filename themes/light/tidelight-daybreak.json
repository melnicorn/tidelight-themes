{
  "name": "Tidelight Daybreak",
  "type": "light",
  "colors": {
    "focusBorder": "#0284c7",

    "foreground": "#0b1220",
    "descriptionForeground": "#334155",
    "errorForeground": "#9f1239",

    "editor.background": "#ffffff",
    "editor.foreground": "#0b1220",

    "editorLineNumber.foreground": "#a3b2c7",
    "editorLineNumber.activeForeground": "#334155",

    "editorCursor.foreground": "#0284c7",
    "editor.selectionBackground": "#0284c724",
    "editor.inactiveSelectionBackground": "#0284c718",
    "editor.wordHighlightBackground": "#38bdf828",
    "editor.wordHighlightStrongBackground": "#38bdf844",
    "editor.findMatchBackground": "#f59e0b45",
    "editor.findMatchHighlightBackground": "#f59e0b28",
    "editor.hoverHighlightBackground": "#0284c714",
    "editor.lineHighlightBackground": "#0b122006",

    "editorIndentGuide.background1": "#dbe3ef",
    "editorIndentGuide.activeBackground1": "#94a3b8",

    "editorBracketMatch.background": "#0284c71a",
    "editorBracketMatch.border": "#0284c75a",

    "editorGroupHeader.tabsBackground": "#eef6ff",
    "tab.activeBackground": "#ffffff",
    "tab.activeBorderTop": "#0284c7",
    "tab.inactiveBackground": "#eef6ff",
    "tab.activeForeground": "#0b1220",
    "tab.inactiveForeground": "#334155",
    "tab.border": "#dbe3ef",

    "activityBar.background": "#eef6ff",
    "activityBar.foreground": "#0b1220",
    "activityBar.inactiveForeground": "#64748b",
    "activityBar.border": "#dbe3ef",

    "sideBar.background": "#eef6ff",
    "sideBar.foreground": "#0b1220",
    "sideBar.border": "#dbe3ef",
    "sideBarTitle.foreground": "#0b1220",

    "list.activeSelectionBackground": "#0284c724",
    "list.activeSelectionForeground": "#0b1220",
    "list.hoverBackground": "#0b122008",
    "list.hoverForeground": "#0b1220",
    "list.inactiveSelectionBackground": "#0b122006",

    "statusBar.background": "#eef6ff",
    "statusBar.foreground": "#0b1220",
    "statusBar.border": "#dbe3ef",
    "statusBar.debuggingBackground": "#1d4ed8",
    "statusBar.debuggingForeground": "#ffffff",

    "titleBar.activeBackground": "#eef6ff",
    "titleBar.activeForeground": "#0b1220",
    "titleBar.inactiveBackground": "#eef6ff",
    "titleBar.inactiveForeground": "#64748b",

    "panel.background": "#ffffff",
    "panel.border": "#dbe3ef",

    "terminal.background": "#ffffff",
    "terminal.foreground": "#0b1220",
    "terminalCursor.foreground": "#0284c7",
    "terminal.ansiBlack": "#0b1220",
    "terminal.ansiBlue": "#1d4ed8",
    "terminal.ansiCyan": "#0284c7",
    "terminal.ansiGreen": "#15803d",
    "terminal.ansiMagenta": "#a21caf",
    "terminal.ansiRed": "#9f1239",
    "terminal.ansiYellow": "#a16207",
    "terminal.ansiWhite": "#334155",

    "input.background": "#f3f8ff",
    "input.foreground": "#0b1220",
    "input.placeholderForeground": "#64748b",
    "input.border": "#dbe3ef",

    "dropdown.background": "#f3f8ff",
    "dropdown.foreground": "#0b1220",
    "dropdown.border": "#dbe3ef",

    "badge.background": "#0284c7",
    "badge.foreground": "#ffffff",

    "notificationCenterHeader.background": "#eef6ff",
    "notifications.background": "#f3f8ff",
    "notifications.foreground": "#0b1220",
    "notifications.border": "#dbe3ef",

    "editorOverviewRuler.errorForeground": "#9f1239cc",
    "editorOverviewRuler.warningForeground": "#a16207cc",
    "editorOverviewRuler.infoForeground": "#1d4ed8cc",

    "gitDecoration.addedResourceForeground": "#15803d",
    "gitDecoration.modifiedResourceForeground": "#1d4ed8",
    "gitDecoration.deletedResourceForeground": "#9f1239",
    "gitDecoration.untrackedResourceForeground": "#0284c7",
    "gitDecoration.ignoredResourceForeground": "#94a3b8"
  },
  "tokenColors": [
    {
      "name": "Comments",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": { "foreground": "#64748b", "fontStyle": "italic" }
    },

    {
      "name": "Strings",
      "scope": ["string", "punctuation.definition.string"],
      "settings": { "foreground": "#15803d" }
    },
    {
      "name": "Template strings / interpolation",
      "scope": [
        "string.template",
        "punctuation.definition.template-expression",
        "punctuation.section.embedded",
        "meta.template.expression"
      ],
      "settings": { "foreground": "#0284c7" }
    },

    {
      "name": "Numbers",
      "scope": ["constant.numeric"],
      "settings": { "foreground": "#a16207" }
    },
    {
      "name": "Language constants (true/false/null/etc.)",
      "scope": ["constant.language"],
      "settings": { "foreground": "#a21caf" }
    },

    {
      "name": "Keywords",
      "scope": [
        "keyword",
        "storage.type",
        "storage.modifier",
        "keyword.control",
        "keyword.operator.new",
        "keyword.operator.expression",
        "keyword.operator.logical"
      ],
      "settings": { "foreground": "#0284c7" }
    },

    {
      "name": "Operators / punctuation",
      "scope": ["keyword.operator", "punctuation", "meta.brace", "meta.delimiter"],
      "settings": { "foreground": "#334155" }
    },

    {
      "name": "Functions",
      "scope": [
        "entity.name.function",
        "support.function",
        "meta.function-call",
        "meta.method-call"
      ],
      "settings": { "foreground": "#1d4ed8" }
    },

    {
      "name": "Parameters",
      "scope": ["variable.parameter", "meta.parameters", "meta.function.parameters"],
      "settings": { "foreground": "#0b1220" }
    },

    {
      "name": "Variables",
      "scope": ["variable", "meta.definition.variable", "entity.name.variable"],
      "settings": { "foreground": "#0b1220" }
    },

    {
      "name": "Constants",
      "scope": ["variable.other.constant", "entity.name.constant"],
      "settings": { "foreground": "#a16207" }
    },

    {
      "name": "Types",
      "scope": [
        "entity.name.type",
        "support.type",
        "support.class",
        "entity.name.class",
        "entity.name.interface",
        "entity.name.struct",
        "entity.name.enum"
      ],
      "settings": { "foreground": "#3730a3" }
    },

    {
      "name": "Type parameters / generics",
      "scope": ["entity.name.type.parameter", "meta.type.parameters", "meta.type.annotation"],
      "settings": { "foreground": "#0284c7" }
    },

    {
      "name": "Language keywords for modules (import/export/etc.)",
      "scope": ["keyword.control.import", "keyword.control.export", "keyword.control.from", "keyword.control.as"],
      "settings": { "foreground": "#0284c7" }
    },

    {
      "name": "Self references (this/self/super)",
      "scope": ["variable.language.this", "variable.language.super", "variable.language.self"],
      "settings": { "foreground": "#a21caf" }
    },

    {
      "name": "Property names",
      "scope": ["variable.other.property", "support.variable.property"],
      "settings": { "foreground": "#4f46e5" }
    },

    {
      "name": "Tags (HTML/XML/JSX)",
      "scope": ["entity.name.tag"],
      "settings": { "foreground": "#0284c7" }
    },
    {
      "name": "Attributes (HTML/XML/JSX)",
      "scope": ["entity.other.attribute-name"],
      "settings": { "foreground": "#3730a3" }
    },

    {
      "name": "Invalid / deprecated",
      "scope": ["invalid", "invalid.deprecated"],
      "settings": { "foreground": "#9f1239", "fontStyle": "underline" }
    },

    {
      "name": "JSON keys (Tidelight Daybreak)",
      "scope": [
        "support.type.property-name.json",
        "meta.object-literal.key.json string.quoted.double.json",
        "meta.object.member.json string.quoted.double.json"
      ],
      "settings": { "foreground": "#4f46e5" }
    },
    {
      "name": "JSON string values (Tidelight Daybreak)",
      "scope": [
        "meta.object-literal.value.json string.quoted.double.json",
        "meta.array.literal.json string.quoted.double.json",
        "string.quoted.double.json"
      ],
      "settings": { "foreground": "#15803d" }
    },
    {
      "name": "JSON numbers (Tidelight Daybreak)",
      "scope": ["constant.numeric.json"],
      "settings": { "foreground": "#a16207" }
    },
    {
      "name": "JSON booleans & null (Tidelight Daybreak)",
      "scope": [
        "constant.language.boolean.json",
        "constant.language.null.json",
        "constant.language.json"
      ],
      "settings": { "foreground": "#a21caf" }
    },
    {
      "name": "JSON punctuation (Tidelight Daybreak)",
      "scope": [
        "punctuation.support.type.property-name.json",
        "punctuation.separator.dictionary.key-value.json",
        "punctuation.definition.dictionary.begin.json",
        "punctuation.definition.dictionary.end.json",
        "punctuation.definition.array.begin.json",
        "punctuation.definition.array.end.json",
        "punctuation.separator.array.json"
      ],
      "settings": { "foreground": "#334155" }
    },

    {
      "name": "Markdown headings",
      "scope": [
        "markup.heading",
        "entity.name.section.markdown",
        "markup.heading.markdown punctuation.definition.heading.markdown"
      ],
      "settings": { "foreground": "#0284c7", "fontStyle": "bold" }
    },
    {
      "name": "Markdown bold",
      "scope": ["markup.bold", "punctuation.definition.bold"],
      "settings": { "foreground": "#0b1220", "fontStyle": "bold" }
    },
    {
      "name": "Markdown italic",
      "scope": ["markup.italic", "punctuation.definition.italic"],
      "settings": { "foreground": "#0b1220", "fontStyle": "italic" }
    },
    {
      "name": "Markdown inline code",
      "scope": ["markup.inline.raw", "markup.inline.raw.string.markdown"],
      "settings": { "foreground": "#15803d" }
    },
    {
      "name": "Markdown code blocks",
      "scope": ["markup.fenced_code.block", "markup.raw.block"],
      "settings": { "foreground": "#0b1220" }
    },
    {
      "name": "Markdown links",
      "scope": ["markup.underline.link", "meta.link.inline", "meta.link.reference"],
      "settings": { "foreground": "#1d4ed8", "fontStyle": "underline" }
    },

    {
      "name": "Diff inserted",
      "scope": ["markup.inserted", "diff.inserted", "meta.diff.header.to-file"],
      "settings": { "foreground": "#15803d" }
    },
    {
      "name": "Diff deleted",
      "scope": ["markup.deleted", "diff.deleted", "meta.diff.header.from-file"],
      "settings": { "foreground": "#9f1239" }
    },
    {
      "name": "Diff changed",
      "scope": ["markup.changed", "diff.changed"],
      "settings": { "foreground": "#a16207" }
    },

    {
      "name": "TODO / FIXME / NOTE",
      "scope": [
        "comment.keyword.todo",
        "comment.keyword.fixme",
        "comment.keyword.note",
        "keyword.other.todo",
        "keyword.other.fixme",
        "keyword.other.note"
      ],
      "settings": { "foreground": "#a16207", "fontStyle": "bold" }
    },

    {
      "name": "Regex (common scopes)",
      "scope": [
        "string.regexp",
        "string.regexp keyword.other",
        "string.regexp punctuation.definition.string",
        "string.regexp punctuation.definition.group",
        "string.regexp punctuation.definition.character-class",
        "string.regexp constant.character.escape"
      ],
      "settings": { "foreground": "#0284c7" }
    }
  ],
  "semanticHighlighting": true,
  "semanticTokenColors": {
    "namespace": "#3730a3",
    "class": "#3730a3",
    "interface": "#3730a3",
    "type": "#3730a3",
    "typeParameter": "#0284c7",
    "parameter": "#0b1220",
    "property": "#4f46e5",
    "variable": "#0b1220",
    "function": "#1d4ed8",
    "method": "#1d4ed8",
    "keyword": "#0284c7",
    "string": "#15803d",
    "number": "#a16207"
  }
}